{% block head %}
    <link rel="stylesheet" href="{{ asset('bundles/acmedemo/css/User.css') }}" />
{% endblock %}
{% block body -%}
    <h1 align = "center" color="blue" >User list</h1>

    <table class="records_list" border='1' style='width:100%'>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Age</th>
                <th>Gender</th>
                <th>Address</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td align = "center"><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td align = "center">{{ entity.name }}</td>
                <td align = "center">{{ entity.age }}</td>
                <td align = "center">{{ entity.gender }}</td>
                <td align = "center">{{ entity.address }}</td>
                <td align = "center">
                
                        <a href="{{ path('user_show', { 'id': entity.id }) }}"><button type="submit">SHOW</button></a>
                        <a href="{{ path('user_edit', { 'id': entity.id }) }}"><button type = "submit">EDIT</button></a>
                
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('user_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>

    {% endblock %}
