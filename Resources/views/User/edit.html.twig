
{% block head %}
    <link rel="stylesheet" href="{{ asset('bundles/acmedemo/css/User.css') }}" />
{% endblock %}
{% block body -%}
    <h1 align = "center">User edit</h1>

    <form align ="center" action="{{ path('user_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">UPDATE</button>
        </p>
    </form>

        <ul class="record_actions">
    <li>
        <a href="{{ path('user') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('user_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            <div style = "width:100%">{{ form_widget(delete_form) }}</div>
            <button type="submit">DELETE</button>
        </form>
    </li>
</ul>

{% endblock %}
